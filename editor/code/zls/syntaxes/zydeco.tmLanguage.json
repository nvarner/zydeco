{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Zydeco",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "storage.type.zydeco",
					"match": "\\b(module|where|use|end|data|codata|alias|def|define|main|let|in|do|match|comatch)\\b"
				},
				{
					"name": "keyword.control.zydeco",
					"match": "\\b(ret|forall|exists|pack)\\b"
				},
				{
					"name": "keyword.other.zydeco",
					"match": "\\b(pub|ext|extern|fn|rec)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.zydeco",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.zydeco",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"match": "#.*$"
				},
				{
					"name": "comment.line.double-slash",
					"match": "//.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.zydeco"
}
